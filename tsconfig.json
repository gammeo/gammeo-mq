{
    "compilerOptions": {
        "downlevelIteration": true,
        "target": "es5",
        "lib": ["esnext"],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        // "noEmit": true,
        "declaration": true,
        "outDir": "lib"
    },
    "exclude": ["node_modules", "lib"]
}
